    </listitem>
   </varlistentry>

   <varlistentry>
<!--==========================orignal english content==========================
    <term><replaceable class="parameter">source_config</replaceable></term>
____________________________________________________________________________-->
    <term><replaceable class="parameter">source_config</replaceable></term>
    <listitem>
<!--==========================orignal english content==========================
     <para>
