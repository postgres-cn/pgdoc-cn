 <refnamediv>
  <refname>CREATE TEXT SEARCH TEMPLATE</refname>
  <refpurpose>定义一种新的文本搜索模板</refpurpose>
 </refnamediv>

 <refsynopsisdiv>
<!--==========================orignal english content==========================
<synopsis>
CREATE TEXT SEARCH TEMPLATE <replaceable class="parameter">name</replaceable> (
