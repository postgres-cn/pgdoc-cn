____________________________________________________________________________-->
    <title>参数</title>

    <variablelist>
     <varlistentry>
<!--==========================orignal english content==========================
      <term><replaceable class="parameter">descriptor_name</replaceable></term>
____________________________________________________________________________-->
      <term><replaceable class="parameter">descriptor_name</replaceable></term>
