      <entry></entry>
      <!-- 
  <entry>Row identifier (hidden attribute; must be explicitly selected)</entry> 
  -->
  <entry>行标识符(隐藏属性;必须明确选择)</entry>
     </row>

     <row>
      <entry><structfield>adrelid</structfield></entry>
      <entry><type>oid</type></entry>
