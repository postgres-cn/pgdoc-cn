     <term><option>--exclude-table=<replaceable class="parameter">pattern</replaceable></option></term>
     <listitem>
<!-- pgdoc-cn_start sig_en=7b7d8f60f2126eb179b495b859b3510f sig_cn_org=a8577e8cddc349d8ca7ce7cb7aab38d8 source=15.7 
      <para>
